<resources>

    <!-- Base application theme. -->
    <style name="Theme.MinimalExpense" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary_color</item>
        <item name="colorPrimaryVariant">@color/primary_color_dark</item>
        <item name="colorOnPrimary">@android:color/primary_text_dark</item>

        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/secondary_color</item>
        <item name="colorSecondaryVariant">@color/secondary_color_dark</item>
        <item name="colorOnSecondary">@android:color/primary_text_light</item>

        <!-- Customize your theme here. -->
        <item name="alertDialogTheme">@style/Theme.MinimalExpense.RoundedCornersDialog</item>
        <item name="colorAccent">@color/primary_color</item>
    </style>

    <style name="Theme.MinimalExpense.NoActionBar">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
    </style>

    <style name="Theme.MinimalExpense.RoundedCornersDialog" parent="ThemeOverlay.MaterialComponents.Dialog.Alert">
        <item name="dialogCornerRadius">10dp</item>
    </style>

    <style name="Theme.MinimalExpense.UseSecondaryColors">
        <item name="colorPrimary">@color/secondary_color</item>
        <item name="colorPrimaryVariant">@color/secondary_color_dark</item>
        <item name="colorOnSecondary">@android:color/primary_text_light</item>
    </style>

</resources>